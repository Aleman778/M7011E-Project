<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Coal Power Plant Control Panel</title>
    <%- include('../partials/bootstrap-css') %>
    <link rel="stylesheet" type="text/css" href="/css/global-manager.css"> 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.js"></script>
  </head>
  <body>
    <%- include('./appbar', {active: 'Overview'}) %>
    
    <div class="jumbotron text-center">
      <%- include('../partials/logo-manager', {size: 86}) %>
      <h1>Coal Power Plant Control Panel</h1>
    </div>
    
    <div class="container text-center">
      <div class="row">
        <div class="col-sm-12">
          <h3>Plant Status: <span id="plant-status" class="badge badge-secondary">Running</span></h3>
        </div>
      </div>
  
      <div class="row">
        <div class="col-sm-12">
          <p id="plant-production">Production: 248.16 kwh/h</p>
          <button type="button" class="btn btn-default" onclick="startPlant()">Start power plant</button>
          <button type="button" class="btn btn-default" onclick="stopPlant()">Stop power plant</button>
        </div>
      </div>

      <br>
  
      <div class="row">
        <div class="col-sm-12"> 
          <h2>Electricity Price</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <h3>Modelled Price</h3>
          <canvas id="electricityPricesChart" width="150" height="100"></canvas>
          <p id="electricity_price"></p>
        </div>
        <div class="col-sm-6">
          <p id="price">Current price: 34.17 kr kw/h</p>
          <br>
          <p id="market-demand">Demand: 231.95 kw/h</p>
          <br>
          <br>
          <input class="form-control" type="number" value="75" id="priceInput">
          <button type="button" class="btn btn-default" onclick="setPrice()">Set price</button>
        </div>
      </div>
    </div>
   
    <script type="text/javascript" src="/js/electricity-price-data.js"></script>
    <%- include('../partials/bootstrap-js') %>
  </body>
</html>
