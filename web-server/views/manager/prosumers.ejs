<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Manage Prosumers</title>
    <%- include('../partials/bootstrap-css') %>
    <link rel="stylesheet" type="text/css" href="/css/global-manager.css"> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/octicons/3.5.0/octicons.min.css">
  </head>
  <body>
    <%- include('./appbar', {active: 'Prosumers'}) %>
    <div class="jumbotron text-center">
      <h1>List of all Prosumers</h1>
    </div>

    <div class="text-center col-md">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Online</th>
            <th scope="col"></th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Removed</th>
            <th scope="col">Created At</th>
            <th scope="col">Blocked</th>
            <th scope="col">Black-out</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody id="prosumerTable">
          <% for (var p in prosumers) { %>
          <tr>
            <td id="<%= prosumers[p].id %>.online"><%= prosumers[p].online; %></td>
            <td><%- include('../partials/avatar', {user: prosumers[p], size: 30})%></td>
            <td id="<%= prosumers[p].id %>.name"><%= prosumers[p].name; %></td>
            <td id="<%= prosumers[p].id %>.email"><%= prosumers[p].email; %></td>
            <td id="<%= prosumers[p].id %>.removed"><%= prosumers[p].removed; %></td>
            <td id="<%= prosumers[p].id %>.created_at"><%= prosumers[p].created_at; %></td>
            <td id="<%= prosumers[p].id %>.blocked"><%= prosumers[p].blocked; %></td>
            <td id="<%= prosumers[p].id %>.blackOut"><%= prosumers[p].blackOut; %></td>
            <td>
              <div class="button-container">
                <form action="/manager/prosumer/info" method="POST">
                  <button class="btn octicon octicon-info" type="submit" 
                    name="prosumerId" value=<%= prosumers[p].id; %>></button>
                </form>
                |
                <form action="/manager/block/prosumer" method="POST">
                  <input type="number" name="timeout" min="10" max="100" size="3" value="10">
                  <button class="btn octicon octicon-circle-slash" type="submit"
                    name="prosumerId" value=<%= prosumers[p].id; %>></button>
                </form>
                |
                <form action="/manager/remove/prosumer" method="POST">
                  <button class="btn octicon octicon-x" type="submit" name="prosumerId"
                    value=<%= prosumers[p].id; %>></button>
                </form>
              </div>
            </td>
          </tr> 
          <% } %>
        </tbody>
      </table>
    </div>
    <script type="text/javascript" src="/js/list-prosumers-update.js"></script>
    <%- include('../partials/bootstrap-js') %>
  </body>
</html>
