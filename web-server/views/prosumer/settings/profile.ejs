<h5>Your Profile</h5>    
<hr class="bg-light"/>
<div class="row">
  <div class="col col-12 col-md-7 col-lg-7">
    <form class="form-settings" action="/prosumer/settings/update/profile" method="post">
      <div class="form-group">
        <label for="inputNewName" class="control-label">Name</label>
        <input type="text" id="inputNewName" name="name" class="form-control"
               value="<%= user.name %>" required="">
      </div>
      <div class="form-group">
        <label for="inputNewEmail" class="control-label">Email</label>
        <input type="email" id="inputNewEmail" name="email" class="form-control"
               value="<%= user.email %>" required="">
      </div>
      <button type="submit" id="inputSettings" class="btn btn-success">
        Update Profile
      </button>
    </form>
  </div>
  <div class="col col-12 col-md-5 col-lg-5">
    <div id="changeAvatar">
      <label for="inputAvatar" class="control-label">Profile Picture</label>
      <%- include('../../partials/avatar', {user: user, size: 200})%>
      <div class="dropdown">
        <button class="btn btn-secondary" id="editAvatarButton"
                type="button" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
          <i class="material-icons">edit</i> Edit
        </button>
        <div class="dropdown-menu"
             aria-labelledby="editAvatarButton">
          <form class="uploader image-uploader" id="formAvatarUpload"
                action="/prosumer/settings/update/avatar"
                method="post" enctype="multipart/form-data">
            <label class="mb-0 dropdown-item">
              Upload image
              <input type="file" name="avatar"
                     accept=".jpg, .png, .jpeg, .gif" id="uploadAvatar" hidden>
            </label>
          </form>
          <% if (user.avatar_filename) { %>
          <form id="formRevertGravatar"
                action="/prosumer/settings/revert/gravatar"
                method="post" enctype="multipart/form-data">
            <button type="submit" class="dropdown-item">
              Revert to gravatar
            </button>
          </form>
          <% } %>
        </div>
      </div>
      <div class="progress" id="uploadProgress">
        <div class="progress-bar bg-success" id="uploadProgressBar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="cropAvatar" tabindex="-1" role="dialog"
     aria-labelledby="cropAvatarLabel" aria-hidden="true"  data-backdrop="static">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="cropAvatarLabel">Crop a new profile picture</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <canvas id="avatarCanvas" width="500" height="500"></canvas>
        <img src="https://unsplash.it/450/450" id="croppr"/>
      </div>
      <div class="modal-footer">
        <button type="button" id="cropAvatarBtn" class="btn btn-success">Set new profile picture</button>
      </div>
    </div>
  </div>
</div>
