<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Prosumer Sign In</title>
    <%- include('../partials/bootstrap-css') %>
    <link rel="stylesheet" type="text/css" href="/css/signin.css">
  </head>
  <body class="text-center">
    <div id="main" class="container">
      <%- include('../partials/alerts', { alerts: alerts }) %>
      <form class="form-signin" action="/prosumer/signin" method="post">
        <%- include('../partials/logo', {size: 86}) %>
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail" class="sr-only">Email Address</label>
        <input type="email" id="inputEmail" name="email" class="form-control"
               placeholder="Email Address" required="" autofocus="">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" name="password" class="form-control"
               placeholder="Password" required="">
        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input"
                 id="inputRemember">
          <label class="form-check-label" for="inputRemember">Remember me</label>
        </div>
        <label class="form-signup-label">New user? <a href="/prosumer/signup">Create a new account.</a></label>
        <button type="submit" id="inputSignIn" class="btn btn-success">Sign In</button>
      </form>
    </div>
    <%- include('../partials/bootstrap-js') %>
  </body>
</html>
