<div class="modal fade" id="<%- id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Upload <%- type %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container droppable row">
          <div class="container droppable-info col">
            <div>Drop files here</div>
            <div class="row-spaced-small small">or</div>
            <div>
              <label class="btn btn-success">
                Select file from computer <input type="file" hidden>
              </label>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success">Save changes</button>
      </div>
    </div>
  </div>
</div>
<script>
  $('#uploadButton').filestyle({
  input: false,
  buttonName: 'btn-success',
  });     
</script>
